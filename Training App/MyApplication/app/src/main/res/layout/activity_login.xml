<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/kayit_ol_linear"
    android:gravity="center"
    android:background="@drawable/wall"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:text="Kayıt Ol"
        android:textSize="27sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/kayit_ol_inputisim"
        app:counterEnabled="true"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:counterMaxLength="20">



        <EditText
            android:layout_width="match_parent"
            android:hint="isminizi giriniz"
            android:textSize="17sp"
            android:inputType="textPersonName"
            android:maxLength="20"
            android:id="@+id/kayit_ol_editisim"
            android:textColor="@color/LoginTextColor"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/kayit_ol_inputEmail"
        app:counterEnabled="true"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:counterMaxLength="30">



        <EditText
            android:layout_width="match_parent"
            android:hint="Emailinizi giriniz"
            android:textSize="17sp"
            android:maxLength="20"
            android:id="@+id/kayit_ol_editEmail"
            android:textColor="@color/LoginTextColor"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/kayit_ol_inputSifre"
        app:counterEnabled="true"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:counterMaxLength="20">



        <EditText
            android:layout_width="match_parent"
            android:hint="Şifrenizi giriniz"
            android:textSize="17sp"
            android:maxLength="20"
            android:id="@+id/kayit_ol_editSifre"
            android:inputType="textPassword"
            android:textColor="@color/LoginTextColor"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/kayit_ol_inputSifreTekrar"
        app:counterEnabled="true"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:counterMaxLength="20">



        <EditText
            android:layout_width="match_parent"
            android:hint="Şifrenizi onaylayınız"
            android:textSize="17sp"
            android:maxLength="20"
            android:id="@+id/kayit_ol_editSifreTekrar"
            android:inputType="textPassword"
            android:textColor="@color/LoginTextColor"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/kayit_ol_giris_yap_btn_bg"
        android:onClick="btnKayitOl"
        android:text="Kayıt Ol"
        android:textAllCaps="false"
        android:textColor="@color/kayitOlBtnTextColor"
        android:textSize="19sp"
        android:textStyle="bold" />




</LinearLayout>